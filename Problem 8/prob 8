//calculate square feet 
float square_ft = square_ft_per_acre * acre;
    
//output square feet
cout << "There are " << square_ft << " square feet";
    
//calculate square meters
float square_m = square_ft /square_ft_per_m ;
    
//output square meters
cout << " and " << square_m<< " square meters " << "in 1/4 acres of land. " <<endl;
    
